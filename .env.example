# HR Interview Orchestrator Configuration
# Copy this file to .env and update with your settings

# OpenAI Configuration (required for online parsing)
OPENAI_API_KEY=your_openai_api_key_here

# Google Integration (optional)
GOOGLE_CLIENT_SECRET_FILE=path/to/your/client_secret.json
GOOGLE_CREDENTIALS_FILE=credentials.json
GOOGLE_TOKEN_FILE=token.json
USE_REAL_CALENDAR=0

# Company Information
COMPANY_NAME=Wajeeh ul Hassan
EMAIL_FROM=hr@yourcompany.com
COMPANY_WEBSITE=https://yourcompany.com

# Scoring Configuration
MIN_SCORE_THRESHOLD=0.35
TOP_CANDIDATES_COUNT=5
SCHEDULE_TOP_N=2

# Interview Settings
INTERVIEW_DURATION_MINUTES=45
DEFAULT_LOCATION=Google Meet
BUSINESS_HOURS_START=9
BUSINESS_HOURS_END=17

# Output Configuration
OUTPUT_FORMATS=json,html
GENERATE_HTML_REPORT=1
INCLUDE_REJECTION_EMAILS=0

# LangSmith Configuration (optional - for tracing)
LANGSMITH_API_KEY=your_langsmith_api_key_here
LANGSMITH_PROJECT=hr-interview-orchestrator
LANGSMITH_TRACING=0


# Paths (optional - defaults are usually fine)
# ARTIFACTS_DIR=artifacts
# DATA_DIR=data
